{% extends 'base.html.twig' %}

{% block title %}Индекс авторов{% endblock %}

{% block body %}
    <h1>Индекс авторов</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Ид</th>
                <th>Имя</th>
                <th>Фамилия</th>
                <th>Отчество</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for author in authors %}
            <tr>
                <td>{{ author.id }}</td>
                <td>{{ author.Fname }}</td>
                <td>{{ author.Sname }}</td>
                <td>{{ author.Pname }}</td>
                <td>
                    <button onclick="window.location.href='{{ path('app_author_show', {'id': author.id}) }}'">Показать</button>
                    <button onclick="window.location.href='{{ path('app_author_edit', {'id': author.id}) }}'">Редактировать</button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Записей не найдено</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <button onclick="window.location.href='{{ path('app_author_new') }}'">Создать нового</button>
{% endblock %}
