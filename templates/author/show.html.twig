{% extends 'base.html.twig' %}

{% block title %}Author{% endblock %}

{% block body %}
    <h1>Author</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ author.id }}</td>
            </tr>
            <tr>
                <th>Fname</th>
                <td>{{ author.Fname }}</td>
            </tr>
            <tr>
                <th>Sname</th>
                <td>{{ author.Sname }}</td>
            </tr>
            <tr>
                <th>Pname</th>
                <td>{{ author.Pname }}</td>
            </tr>
        </tbody>
    </table>

    <h2>Books</h2>
    {% if author.books|length > 0 %}
        <ul>
        {% for book in author.books %}
            <li>
                {{ book.Name }} {{ book.Year }} {{ book.ISBN }}
                <a href="{{ path('app_book_show', {'id': book.id}) }}">View</a>
            </li>
        {% endfor %}
        </ul>
    {% else %}
        <p>No books associated with this author.</p>
    {% endif %}

    <a href="{{ path('app_author_index') }}">back to list</a>

    <a href="{{ path('app_author_edit', {'id': author.id}) }}">edit</a>

    {{ include('author/_delete_form.html.twig') }}
{% endblock %}
